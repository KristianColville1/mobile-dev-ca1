<?xml version="1.0" encoding="utf-8" ?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.main.MainActivity">

    <ImageView
        android:id="@+id/mainBackground"
        android:foreground="@drawable/tinted_foreground"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/main_background"
        android:scaleType="centerCrop"/>

    <TextView
        android:id="@+id/orderOnlineTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/original_surfer"
        android:text="KPC\nOrder Food\nOnline"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="60sp"
        android:shadowColor="@color/black"
        android:shadowDx="12"
        android:shadowDy="12"
        android:shadowRadius="12"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/mainBackground"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias=".34"
        />

    <Button
        android:id="@+id/registerButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="18dp"
        android:text="Register"
        android:textSize="22dp"
        android:textStyle="bold"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/orderOnlineTextView"
        app:layout_constraintWidth_percent=".65"
        app:layout_constraintVertical_bias=".25"
        />

    <Button
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="18dp"
        android:text="Login"
        android:textSize="22dp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:backgroundTint="@color/coralPink"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/registerButton"
        app:layout_constraintWidth_percent=".65"
        app:layout_constraintVertical_bias=".25"
        />
</androidx.constraintlayout.widget.ConstraintLayout>